@model NorthwestLabs.Models.Assay

@{
    ViewBag.Title = "EditAssay";
    Layout = "~/Views/Shared/_SeattleEmpLayout.cshtml";
}


<h2>Edit Assay</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Assay_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Compound_ID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Compound_ID, new SelectList(ViewBag.compounds, "Compound_ID", "Compound_ID"), new { style = "height: 30px; " })
                @Html.ValidationMessageFor(model => model.Compound_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Assay_Duration, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Assay_Duration, new { htmlAttributes = new { @class = "form-control", style = "width: 200px;" } })
                @Html.ValidationMessageFor(model => model.Assay_Duration, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.No_Of_Tests, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.No_Of_Tests, new { htmlAttributes = new { @class = "form-control", style = "width: 200px;" } })
                @Html.ValidationMessageFor(model => model.No_Of_Tests, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Assay_Price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Assay_Price, new { htmlAttributes = new { @class = "form-control", style = "width: 200px;" } })
                @Html.ValidationMessageFor(model => model.Assay_Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Assay_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Assay_Name, new { htmlAttributes = new { @class = "form-control", style = "width: 500px;" } })
                @Html.ValidationMessageFor(model => model.Assay_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Assay_Summary, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Assay_Summary, new { htmlAttributes = new { @class = "form-control", style = "width: 500px;" } })
                @Html.ValidationMessageFor(model => model.Assay_Summary, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Assay_Details, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Assay_Details, new { htmlAttributes = new { @class = "form-control", style = "width: 500px;" } })
                @Html.ValidationMessageFor(model => model.Assay_Details, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-outline-danger my-2 my-sm-0" style="font-size: 16px" />
                <a class="btn btn-outline-danger my-2 my-sm-0" href="@Url.Action("ProtoNotebook", "SeattleEmployee")" style="font-size: 16px">Cancel</a>
            </div>
        </div>
    </div>
}


