@model IEnumerable<NorthwestLabs.Models.Invoice>

@{
    ViewBag.Title = "ViewCosts";
}

<h2>Past Costs</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Net_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total_Discount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Final_Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.Order_ID)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Net_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total_Discount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Final_Price)
        </td>
        <td></td>
    </tr>
}

</table>
