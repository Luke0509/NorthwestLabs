@model NorthwestLabs.Models.WorkOrders

@{
    ViewBag.Title = "EditWO";
    Layout = "~/Views/Shared/_TechDirLayout.cshtml";
}

<h2>Add Analysis to Work Order</h2>
<br />

<h4>Please include a brief analysis of the assay test. Include any discounts that may apply to the order, if applicable.</h4>
<br /> 

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Order_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Cust_ID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Cust_ID, new SelectList(ViewBag.customers, "Cust_ID", "Cust_ID"), new { style = "height: 30px; " })
                @Html.ValidationMessageFor(model => model.Cust_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date_Created, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date_Created, new { htmlAttributes = new { @class = "form-control", style = "width: 200px;" } })
                @Html.ValidationMessageFor(model => model.Date_Created, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date_Completed, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date_Completed, new { htmlAttributes = new { @class = "form-control", style = "width: 200px;" } })
                @Html.ValidationMessageFor(model => model.Date_Completed, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Order_Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Order_Status, new SelectList(ViewBag.orderStatus, "Status_Description", "Status_Description"))
                @Html.ValidationMessageFor(model => model.Order_Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WO_Discount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.WO_Discount, new { htmlAttributes = new { @class = "form-control", style = "width: 200px;" } })
                @Html.ValidationMessageFor(model => model.WO_Discount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Expedite_Order, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="radio">

                    <span> No </span> @Html.RadioButtonFor(model => model.Expedite_Order, false)
                    <br /><br />
                    <span> Yes </span>@Html.RadioButtonFor(model => model.Expedite_Order, true)

                    @Html.ValidationMessageFor(model => model.Expedite_Order, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Test2_IfActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="radio">

                    <span> No </span> @Html.RadioButtonFor(model => model.Test2_IfActive, false)
                    <br /><br />
                    <span> Yes </span>@Html.RadioButtonFor(model => model.Test2_IfActive, true)

                    @Html.ValidationMessageFor(model => model.Test2_IfActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Test2_IfInactive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="radio">

                    <span> No </span> @Html.RadioButtonFor(model => model.Test2_IfInactive, false)
                    <br /><br />
                    <span> Yes </span>@Html.RadioButtonFor(model => model.Test2_IfInactive, true)

                    @Html.ValidationMessageFor(model => model.Test2_IfInactive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Analysis, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Analysis, new { htmlAttributes = new { @class = "form-control", style = "width: 200px;" } })
                @Html.ValidationMessageFor(model => model.Analysis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Analysis_Completed, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="radio">
                    <span> No </span> @Html.RadioButtonFor(model => model.Analysis_Completed, false)
                    <br /><br />
                    <span> Yes </span>@Html.RadioButtonFor(model => model.Analysis_Completed, true)

                    @Html.ValidationMessageFor(model => model.Analysis_Completed, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-outline-danger my-2 my-sm-0" style="font-size: 16px" />
                <a class="btn btn-outline-danger my-2 my-sm-0" href="@Url.Action("WorkOrders", "BR")" style="font-size: 16px">Cancel</a>
            </div>
        </div>
    </div>
}



